generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  output          = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  password    String
  role        Role
  courses     Course[]     @relation("EducatorCourses")
  enrollments Enrollment[]
}

enum Role {
  STUDENT
  EDUCATOR
  ADMIN
}

model Course {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  content     String // written content (Markdown/HTML)
  videoUrl    String?
  educator    User         @relation("EducatorCourses", fields: [educatorId], references: [id])
  educatorId  Int
  createdAt   DateTime     @default(now())
  enrollments Enrollment[]
}

model Enrollment {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  course    Course   @relation(fields: [courseId], references: [id])
  courseId  Int
  createdAt DateTime @default(now())

  @@unique([userId, courseId]) // Prevent duplicate enrollments
}
